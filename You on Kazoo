def pretend():  #pretend spirit crashes bus then takes a child
    buttonDance.destroy()
    buttonKazoo.destroy()
    buttonPretend.destroy()
    buttonSing.destroy()
    
    Bus.move(brett_speach3, 0, -2000)
    
    bus_rise = 100
    carl_rise1 = 100
    carl_rise2 = 50
    jonathon_run = 92
    jonathon_hit_one = 8
    jonathon_hit_two = 10
    jonathon_hit_three = 180
    while bus_rise > 0:
        Bus.move(bus_bottom, 0, -2)
        Bus.move(bus_top, 0, -2)
        Bus.move(back_wheel, 0, -2)
        Bus.move(front_wheel, 0, -2)
        Bus.move(back_wheel_hub, 0, -2)
        Bus.move(front_wheel_hub, 0, -2)
        Bus.move(main_window, 0, -2)
        Bus.move(front_window, 0, -2)
        Bus.move(side_strip1, 0, -2)
        Bus.move(side_strip2, 0, -2)
        Bus.move(side_strip3, 0, -2)
        Bus.move(side_strip4, 0, -2)
        Bus.move(side_strip5, 0, -2)
        Bus.move(side_strip6, 0, -2)
        Bus.move(bus_text, 0, -2)
        Bus.move(brett_hair, 0, -2)
        Bus.move(brett_head, 0, -2)
        Bus.move(brett_eye1, 0, -2)
        Bus.move(brett_mouth, 0, -2)
        Bus.move(brett_body, 0, -2)
        Bus.move(brett_arm, 0, -2)
        Bus.move(carl_arm1, 0, -1.5)
        Bus.move(carl_arm2, 0, -1.5)
        Bus.move(carl_body, 0, -1.5)
        Bus.move(carl_eye1, 0, -1.5)
        Bus.move(carl_eye2, 0, -1.5)
        Bus.move(carl_hair, 0, -1.5)
        Bus.move(carl_head, 0, -1.5)
        Bus.move(carl_leg1, 0, -1.5)
        Bus.move(carl_leg2, 0, -1.5)
        Bus.move(carl_mouth, 0, -1.5) 
        bus_window.update()
        time.sleep(0.005)
        bus_rise -= 1
    while carl_rise1 > 0:
        Bus.move(carl_arm1, 0, -3)
        Bus.move(carl_arm2, 0, -3)
        Bus.move(carl_body, 0, -3)
        Bus.move(carl_eye1, 0, -3)
        Bus.move(carl_eye2, 0, -3)
        Bus.move(carl_hair, 0, -3)
        Bus.move(carl_head, 0, -3)
        Bus.move(carl_leg1, 0, -3)
        Bus.move(carl_leg2, 0, -3)
        Bus.move(carl_mouth, 0, -3)   
        bus_window.update()
        time.sleep(0.005)
        carl_rise1 -= 1
    while carl_rise2 > 0:
        Bus.move(carl_arm1, 0, -3)
        Bus.move(carl_arm2, 0, -3)
        Bus.move(carl_body, 0, -3)
        Bus.move(carl_eye1, 0, -3)
        Bus.move(carl_eye2, 0, -3)
        Bus.move(carl_hair, 0, -3)
        Bus.move(carl_head, 0, -3)
        Bus.move(carl_leg1, 0, -3)
        Bus.move(carl_leg2, 0, -3)
        Bus.move(carl_mouth, 0, -3)   
        bus_window.update()
        time.sleep(0.005)
        carl_rise2 -= 1  
    Bus.move(jonathon_eye1, -4, 0)
    Bus.move(jonathon_eye2, -4, 0)
    Bus.move(jonathon_mouth, -4, 0)
    time.sleep(0.5)
    Bus.move(jonathon_eye1, 4, 0)
    Bus.move(jonathon_eye2, 4, 0)
    Bus.move(jonathon_mouth, 4, 0)
    while jonathon_run > 0:
        Bus.move(bus_bottom, 5, 2)
        Bus.move(bus_top, 5, 2)
        Bus.move(back_wheel, 5, 2)
        Bus.move(front_wheel, 5, 2)
        Bus.move(back_wheel_hub, 5, 2)
        Bus.move(front_wheel_hub, 5, 2)
        Bus.move(main_window, 5, 2)
        Bus.move(front_window, 5, 2)
        Bus.move(side_strip1, 5, 2)
        Bus.move(side_strip2, 5, 2)
