        Bus.move(brett_head, 1, 0)
        Bus.move(brett_eye1, 1, 0)
        Bus.move(brett_mouth, 1, 0)
        Bus.move(brett_body, 1, 0)
        Bus.move(brett_arm, 1, 0)
