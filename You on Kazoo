def escape():  # Quit function.
    bus_window.destroy()

def end():
    button1.destroy()
    final_credits = 900
    Bus.move(black_screen, 0, -2000)
    while final_credits > 0:
        Bus.move(director, 0, -2)
        Bus.move(director_name, 0, -2)
        Bus.move(starring, 0, -2)
        Bus.move(starring_name, 0, -2)
        Bus.move(created_by, 0, -2)
        Bus.move(created_by_name, 0, -2)
        Bus.move(title_name, 0, -2)
        time.sleep(0.01)
        final_credits -= 1
        bus_window.update()
    time.sleep(4)
    escape()    
    
def kazoo():        #carl does solo centre screen 
