    end()      
    
def sing():  #special friends song, carl gets in bus but jonathon is not a special friend, is run over and left behind
    buttonDance.destroy()
    buttonKazoo.destroy()
    buttonPretend.destroy()
    buttonSing.destroy()
    
    Bus.move(brett_speach3, 0, -2000)
    
    sing_move = 320
    sing_move_two = 23
    carl_on_bus = 240
    jonathon_crash_up = 70
    jonathon_crash_down = 75
    sing_bus_drive_two = 175
    sing_bus_drive_three = 180
    while sing_move > 0:
        Bus.move(bus_bottom, 1, 0)
        Bus.move(bus_top, 1, 0)
        Bus.move(back_wheel, 1, 0)
        Bus.move(front_wheel, 1, 0)
