Button1Text = 'CLICK TO DIEEEEEEEEEE'
Button2Text = 'click to live yo'
Bus_text = 'SKOOOL'
bus_font_size = 14
brett_speach_text = 'Oh! Hi! \nWait a minute. \nWho are you?'
