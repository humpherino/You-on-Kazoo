    bus_text = Bus.create_text(245,570, text=Bus_text, font=("Purisa", bus_font_size))
    bus_window.update()
    time.sleep(1)
    brett_speach = Bus.create_text(410,520, text=brett_speach_text, font=("Arial", 13))
    bus_window.update()
    time.sleep(1)
    carl_speach = Bus.create_text(830,520, text=carl_speach_text, font=("Arial", 13))
    jonathon_speach = Bus.create_text(650,2520, text=jonathon_speach_text, font=("Arial", 13))
    
    brett_speach2 = Bus.create_text(420, 2520, text='I like to Sing,\nDance, Pretend\nAnd Kazoooo!', font=("Arial", 14))
    brett_speach3 = Bus.create_text(410, 2520, text='What do you\nlike to do?', font=("Arial", 15))
    
    white_screen = Bus.create_rectangle(0,2000,2000,4000, outline = 'white', fill='white')
    black_screen = Bus.create_rectangle(0,2000,2000,4000, outline = 'black', fill='black')
    
    director = Bus.create_text(800,1100, text='WRITTEN AND DIRECTED BY', font=('Arial', 22), fill='white')
    director_name = Bus.create_text(800,1150, text='GREG BERNSTEIN', font=('Arial', 25), fill='white')
    starring = Bus.create_text(800,1300, text='STARRING', font=('Arial', 22), fill='white')
    starring_name = Bus.create_text(800,1350, text='BRETT AMBLER', font=('Arial', 25), fill='white')
    created_by = Bus.create_text(800,1500, text='CREATED BY', font=('Arial', 22), fill='white')
    created_by_name = Bus.create_text(800,1550, text='HUMPH', font=('Arial', 25), fill='white')
    title_name = Bus.create_text(800,2200, text='YOU ON KAZOO', font=('Arial', 40), fill='white')
    
    bus_window.update()
    #start of movement
    while carl_jump < 4:
        while carl_jump_up <6:
            Bus.move(carl_hair, 0, -2)
            Bus.move(carl_head, 0, -2)
            Bus.move(carl_eye1, 0, -2)
            Bus.move(carl_eye2, 0, -2)
            Bus.move(carl_mouth, 0, -2)
            Bus.move(carl_body, 0, -2)
            Bus.move(carl_arm1, 0, -2)
            Bus.move(carl_arm2, 0, -2)
            Bus.move(carl_leg1, 0, -2)
            Bus.move(carl_leg2, 0, -2)
            time.sleep(0.005)
            bus_window.update()
            carl_jump_up+=1
        while carl_jump_down <6:
            Bus.move(carl_hair, 0, 2)
            Bus.move(carl_head, 0, 2)
            Bus.move(carl_eye1, 0, 2)
            Bus.move(carl_eye2, 0, 2)
            Bus.move(carl_mouth, 0,2)
            Bus.move(carl_body, 0, 2)
            Bus.move(carl_arm1, 0, 2)
            Bus.move(carl_arm2, 0, 2)
            Bus.move(carl_leg1, 0, 2)
            Bus.move(carl_leg2, 0, 2)
            time.sleep(0.005)
            bus_window.update()
            carl_jump_down+=1
        carl_jump += 1
        bus_window.update()
        carl_jump_up = 0
        carl_jump_down = 0
    
    time.sleep(1.5)
    Bus.move(jonathon_speach, 0, -2000)
    bus_window.update()
    while jonathon_explode_up <10:
        Bus.move(jonathon_hair, 0, -30)
        Bus.move(jonathon_head, 0, -30)
        Bus.move(jonathon_eye1, -15, -25)
        Bus.move(jonathon_eye2, 15, -25)
        Bus.move(jonathon_mouth, 0, -27)
        Bus.move(jonathon_body, 0, -25)
        Bus.move(jonathon_arm1, -20, -23)
        Bus.move(jonathon_arm2, 20, -23)
        Bus.move(jonathon_leg1, -35, -15)
        Bus.move(jonathon_leg2, 35, -15)
        time.sleep(0.01)
        bus_window.update()
        jonathon_explode_up+=1
    while carl_jump_down <10:
        Bus.move(jonathon_hair, 0, 30)
        Bus.move(jonathon_head, 0, 30)
        Bus.move(jonathon_eye1, 15, 25)
        Bus.move(jonathon_eye2, -15, 25)
        Bus.move(jonathon_mouth, 0, 27)
        Bus.move(jonathon_body, 0, 25)
        Bus.move(jonathon_arm1, 20, 23)
        Bus.move(jonathon_arm2, -20, 23)
        Bus.move(jonathon_leg1, 35, 15)
        Bus.move(jonathon_leg2, -35, 15)
        time.sleep(0.01)
        bus_window.update()
        carl_jump_down+=1
    time.sleep(1)
    bus_window.update()
    jonathon_explode_up = 0
    jonathon_explode_down = 0
    
    Bus.move(brett_speach, 0, 2000)
    Bus.move(carl_speach, 0, 2000)
    Bus.move(jonathon_speach, 0, 2000)
    Bus.move(brett_speach2, 0, -2000)
    bus_window.update()
    time.sleep(3)
    Bus.move(brett_speach3, 0, -2000)
    Bus.move(brett_speach2, 0, 2000)
    bus_window.update()
    time.sleep(1)
    
    #buttons appear
    #sing
    buttonSing = Button(Bus, text = "Sing", command = sing, anchor = W)
    buttonSing.configure(width = 5, activebackground = "Yellow", relief = FLAT)
    buttonSing_window = Bus.create_window(305, 50, anchor=NW, window=buttonSing)
    #dance
    buttonDance = Button(Bus, text = "Dance", command = dance, anchor = W)
    buttonDance.configure(width = 5, activebackground = "Pink", relief = FLAT)
    buttonDance_window = Bus.create_window(605, 50, anchor=NW, window=buttonDance)     
    #pretend
    buttonPretend = Button(Bus, text = "Pretend", command = pretend, anchor = W)
    buttonPretend.configure(width = 6, activebackground = "purple", relief = FLAT)
    buttonPretend_window = Bus.create_window(905, 50, anchor=NW, window=buttonPretend)
    #KAZOOO
    buttonKazoo = Button(Bus, text = "Kazoo", command = kazoo, anchor = W)
    buttonKazoo.configure(width = 5, activebackground = "cyan", relief = FLAT)
    buttonKazoo_window = Bus.create_window(1205, 50, anchor=NW, window=buttonKazoo)   
    
    
    bus_window.bind('<Escape>', escape)

    # Infinite loop

    bus_window.mainloop()
